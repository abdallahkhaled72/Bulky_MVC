@page
@model VerifyEmailModel
@{
    ViewData["Title"] = "Verify Email";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ResendSuccess"] != null && (bool)TempData["ResendSuccess"])
{
    <div class="alert alert-success" role="alert">
        A new verification code has been sent to your email.
    </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Email" />

            <div class="form-floating">
                <p>We've sent a verification code to <strong>@Model.Email</strong>. Please check your email and enter the code below.</p>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                <label asp-for="Input.Code" class="form-label"></label>
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Verify Email</button>
        </form>

        <!-- Add this form for resending code -->
        <div class="mt-3">
            <form method="post" asp-page-handler="ResendCode">
                <input type="hidden" asp-for="Input.Email" value="@Model.Email" />
                <button type="submit" class="w-100 btn btn-lg btn-secondary">Resend Verification Code</button>
            </form>

            <div class="mt-3">
                <p>Didn't receive the code? <a asp-page="./ResendVerificationCode" asp-route-email="@Model.Email">Resend verification code</a></p>
            </div>
        </div>
    </div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
